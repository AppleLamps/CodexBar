<Window x:Class="CodexBarWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodexBarWindows"
        xmlns:vm="clr-namespace:CodexBarWindows.ViewModels"
        mc:Ignorable="d"
        Title="CodexBar - API Usage Monitor"
        Height="600" Width="800"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource HeaderBackgroundBrush}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="CodexBar"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextBrush}" />
                    <TextBlock Text="API Usage Monitor"
                               FontSize="14"
                               Margin="15,0,0,0"
                               VerticalAlignment="Bottom"
                               Foreground="{DynamicResource SecondaryTextBrush}" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Margin="0,0,10,0" />
                    <Button Content="Settings"
                            Command="{Binding OpenSettingsCommand}"
                            Style="{DynamicResource SecondaryButtonStyle}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="20">
            <ItemsControl ItemsSource="{Binding Providers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{DynamicResource ProviderCardStyle}"
                                Width="350"
                                Margin="0,0,15,15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Provider Header -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                    <Ellipse Width="40" Height="40"
                                             Fill="{Binding AccentColor}" />
                                    <StackPanel Margin="15,0,0,0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryTextBrush}" />
                                        <TextBlock Text="{Binding Status}"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource SecondaryTextBrush}" />
                                    </StackPanel>
                                </StackPanel>

                                <!-- Usage Progress -->
                                <Grid Grid.Row="1" Margin="0,0,0,10">
                                    <ProgressBar Value="{Binding UsagePercentage}"
                                                 Maximum="100"
                                                 Height="8"
                                                 Style="{DynamicResource UsageProgressBarStyle}" />
                                </Grid>

                                <!-- Usage Details -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Used"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextBrush}" />
                                        <TextBlock Text="{Binding UsedDisplay}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryTextBrush}" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="Remaining"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextBrush}" />
                                        <TextBlock Text="{Binding RemainingDisplay}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryTextBrush}" />
                                    </StackPanel>
                                </Grid>

                                <!-- Reset Date -->
                                <TextBlock Grid.Row="3"
                                           Text="{Binding ResetDateDisplay}"
                                           FontSize="11"
                                           Margin="0,10,0,0"
                                           Foreground="{DynamicResource TertiaryTextBrush}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource StatusBarBackgroundBrush}"
                Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           FontSize="12" />

                <TextBlock Grid.Column="1"
                           Text="{Binding LastUpdatedDisplay}"
                           Foreground="{DynamicResource TertiaryTextBrush}"
                           FontSize="12" />
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4" />
                <TextBlock Text="Fetching usage data..."
                           Foreground="White"
                           Margin="0,15,0,0"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
